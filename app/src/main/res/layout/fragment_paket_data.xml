<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.pulsadata.PaketDataFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        tools:itemCount="4"
        tools:listitem="@layout/item_pulsa_paket_data" />

    <!-- TextView untuk pesan kosong / informasi -->
    <TextView
        android:id="@+id/tvEmptyMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Masukkan Nomor Pengguna"
        android:textColor="#888888"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="visible" /> <!-- default disembunyikan -->

    <!--    Progress Bar-->
    <include
        layout="@layout/loading_layout_overlay"
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

</FrameLayout>