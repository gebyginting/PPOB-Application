<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_dialog_bg"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rincian Deposit"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nominal"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvNominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp1.000.000"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pembayaran"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLogoBank"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/bca_logo"
            android:contentDescription="Logo Bank" />

        <TextView
            android:id="@+id/tvNamaBank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="Transfer Bank BCA"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:background="@drawable/custom_outline_btn"
            android:backgroundTint="@color/orange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="48dp"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:textColor="@color/orange" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/depositBtn"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/orange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Deposit"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
